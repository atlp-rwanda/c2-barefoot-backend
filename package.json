{
  "name": "c2-barefoot-backend",
  "version": "1.0.0",
  "description": "Backend API for Barefoot Nomad ",
  "main": "app.js",
  "scripts": {
    "heroku-postbuild": "babel src -d build",
    "start": "cross-env NODE_ENV=production node ./build/app.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./src/app.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/register ./tests/*.test.js --timeout 1000000 --exit || true",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint . --fix",
    "createModel": "npx sequelize-cli model:generate ",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate-undo": "npx sequelize-cli db:migrate:undo",
    "createSeed": "npx sequelize-cli seed:generate",
    "seed": "npx sequelize-cli db:seed:all",
    "seed-undo": "npx sequelize-cli db:seed:undo",
    "seed-undo-all": "npx sequelize-cli db:seed:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/c2-barefoot-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atlp-rwanda/c2-barefoot-backend/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/c2-barefoot-backend#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "coverage": "^0.4.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.14",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^5.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "sinon": "^9.2.0"
  }
}
